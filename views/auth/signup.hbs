{{!-- views/auth/signup.hbs --}}

<div id="form">
  <h2>Signup</h2>
  <form action="/auth/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Email
      <input type="text" name="email" placeholder="rockstar@ironhack.com" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
    {{!-- rule of thumb: keep input names the same as field names.  However, we not use the field name,passwordhash, here because we are going to do something with the password before sending it to the database; specific to this exercise --}}

    <button type="submit">Create account</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}  
  
  </form>
</div>
